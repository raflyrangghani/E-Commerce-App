<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Warna background dari box -->
    <solid android:color="#FFFFFF"/> <!-- Ganti dengan warna yang diinginkan -->

    <!-- Warna dan lebar dari border -->
    <stroke android:width="1dp" android:color="@color/green"/> <!-- Ganti dengan warna dan lebar yang diinginkan -->

    <!-- Jika ingin membuat sudut box menjadi bulat -->
    <corners android:radius="8dp"/> <!-- Ganti dengan radius yang diinginkan -->
</shape>
